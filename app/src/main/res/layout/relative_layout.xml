<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="1"
        android:textSize="30dp"
        android:background="#3aefcd" />
    <Button
        android:layout_alignLeft="@id/btn1"
        android:layout_below="@id/btn1"
        android:id="@+id/btn2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="30dp"
        android:background="#ccefcd" />
    <Button
        android:layout_alignLeft="@id/btn2"
        android:layout_below="@id/btn2"
        android:id="@+id/btn3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="30dp"
        android:background="#1eefcd" />

    <Button
        android:layout_alignLeft="@id/btn3"
        android:layout_below="@id/btn3"
        android:id="@+id/btn4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#9eefcd"
        android:text="4"
        android:textSize="30dp" />


    <Button
        android:layout_alignLeft="@id/btn4"
        android:layout_below="@id/btn4"
        android:id="@+id/btn5"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#1aeacd"
        android:text="5"
        android:textSize="30dp" />


    <Button
        android:layout_alignLeft="@id/btn5"
        android:layout_below="@id/btn5"
        android:id="@+id/btn6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#ceefcd"
        android:text="6"
        android:textSize="30dp" />


</RelativeLayout>